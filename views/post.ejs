<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

  <body>

    <%- include('layouts/navbar'); -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h2 class="subheading">
                  <%= blogpost.body.substring(0,100) %> ...
                </h2>
                <span class="meta">
                  Posted by <a href="#">
                    <%= blogpost.userid ? blogpost.userid.username : 'Unknown' %>
                  </a>
                  on <%= blogpost.datePosted ? blogpost.datePosted.toDateString() : 'Unknown date' %>
                </span>

              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

              <!-- Display image if it exists -->
              <% if(blogpost.image) { %>
                <img src="<%= blogpost.image %>" class="img-fluid mb-4" alt="Post Image">
                <% } %>

                  <!-- Render Summernote HTML content -->
                  <div class="blog-post-body">
                    <%- blogpost.body %>
                  </div>

            </div>
          </div>
        </div>
      </article>

      <hr>

      <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>

  </body>

</html>